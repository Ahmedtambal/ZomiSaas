# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-supabase-jwt-secret-here

# JWT Configuration
SECRET_KEY=your-secret-key-minimum-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption (Field-Level PII Encryption)
# Generate key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# CRITICAL: Store backup in AWS Secrets Manager / Azure Key Vault
# WARNING: If lost, encrypted data is PERMANENTLY UNRECOVERABLE
ENCRYPTION_KEY=your-fernet-encryption-key-here

# Password Requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_DIGIT=true
REQUIRE_SPECIAL_CHAR=true

# Invite Code Configuration
INVITE_CODE_EXPIRY_HOURS=2

# Frontend URL (use your Render frontend URL in production)
FRONTEND_URL=https://your-frontend-app.onrender.com

# Environment
ENVIRONMENT=production
